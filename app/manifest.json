{
    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "version": "1.0.10",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "homepage_url": "https://loadimpact.com/",
    "author": "Load Impact",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "64": "images/icon-64.png",
        "128": "images/icon-128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://api.loadimpact.com; object-src 'self'",
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Load Impact User Scenario Recorder",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "externally_connectable": {
      "matches": ["*://*.loadimpact.com/*"]
    },
    "permissions": [
        "browsingData",
        "http://*/*",
        "https://*/*",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking"
    ],
    "minimum_chrome_version": "19"
}
